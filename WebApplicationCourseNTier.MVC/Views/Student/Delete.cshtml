@model WebApplicationCourseNTier.Business.DTOs.StudentDTOs.GetStudentDto

@{
    ViewData["Title"] = "Delete Student";
}

<h1>Delete Student</h1>

<p>Are you sure you want to delete the student <strong>@Model.Name</strong>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("All", "Student")" class="btn btn-secondary">Cancel</a>
</form>
