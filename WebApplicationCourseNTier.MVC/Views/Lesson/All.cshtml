@model WebApplicationCourseNTier.DataAccess.Models.PaginationResponse<WebApplicationCourseNTier.Business.DTOs.Lesson.GetLessonDto>;

@{
    ViewData["Title"] = "All Lessons";
    var paginationRequest = ViewData["PaginationRequest"] as WebApplicationCourseNTier.DataAccess.Models.PaginationRequest;
    var paginationResponse = ViewData["PaginationResponse"] as WebApplicationCourseNTier.DataAccess.Models.PaginationResponse<WebApplicationCourseNTier.Business.DTOs.Lesson.GetLessonDto>;

    // Calculate total pages
    var totalPages = Math.Ceiling((double)(paginationResponse?.TotalCount ?? 0) / (paginationRequest?.PageSize ?? 10));
}

<!-- Create Lesson Button -->
<div class="d-flex justify-content-start mb-4">
    <a href="@Url.Action("Create", "Lesson")" class="btn btn-success btn-lg text-white font-weight-bold">
        <i class="fas fa-plus-circle"></i> Create New Lesson
    </a>
</div>

<h2>All Lessons</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Group Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in paginationResponse.Data) 
        {
            <tr>
                <td>@lesson.Name</td>
                <td>@lesson.StartDate</td>
                <td>@lesson.EndDate</td>
                <td>@lesson.GroupName</td>
                <td class="text-center">
                    <div class="d-flex justify-content-center">
                        <!-- Edit Button -->
                        <a class="btn btn-warning btn-sm text-white mx-2" asp-controller="Lesson" asp-action="Edit" asp-route-id="@lesson.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <!-- Delete Button -->
                        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@lesson.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this lesson?');">
                            <button type="submit" class="btn btn-danger btn-sm text-white mx-2">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                        <!-- Details Button -->
                        <a class="btn btn-info btn-sm text-white mx-2" asp-controller="Lesson" asp-action="Details" asp-route-id="@lesson.Id">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between">
    <div>
        @if (paginationRequest != null && paginationResponse != null)
        {
            <strong>Page @paginationRequest.PageNumber of @totalPages</strong>
        }
    </div>

    <div>
        <ul class="pagination">
            <!-- Previous button, only shown if the current page is greater than 1 -->
            @if (paginationRequest?.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("All", "Lesson", new { pageNumber = paginationRequest.PageNumber - 1, pageSize = paginationRequest.PageSize })">Previous</a>
                </li>
            }

            <!-- Page number buttons -->
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == paginationRequest?.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("All", "Lesson", new { pageNumber = i, pageSize = paginationRequest?.PageSize })">@i</a>
                </li>
            }

            <!-- Next button, only shown if the current page is less than the total number of pages -->
            @if (paginationRequest?.PageNumber < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("All", "Lesson", new { pageNumber = paginationRequest.PageNumber + 1, pageSize = paginationRequest.PageSize })">Next</a>
                </li>
            }
        </ul>
    </div>
</div>
